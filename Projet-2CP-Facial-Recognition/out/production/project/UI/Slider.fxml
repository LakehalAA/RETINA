<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="600.0" maxWidth="900.0" prefHeight="600.0" prefWidth="900.0" spacing="10.0" style="-fx-background-color: #FFF;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.C_slider">
   <children>
      <StackPane>
         <children>
            <VBox fx:id="slide1" alignment="CENTER" spacing="55.0">
               <children>
                  <ImageView fitHeight="226.0" fitWidth="359.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@assets/1.png" />
                     </image>
                  </ImageView>
                  <Label prefHeight="70.0" prefWidth="570.0" text="L'historique vous permettra de consulter les dernières images comparées pour faciliter le travail" textAlignment="CENTER" wrapText="true">
                     <font>
                        <Font name="GothamPro-Light" size="18.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <VBox fx:id="slide2" alignment="CENTER" opacity="0.0" spacing="55.0" translateX="100.0">
               <children>
                  <ImageView fitHeight="230.0" fitWidth="197.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@assets/2.png" />
                     </image>
                  </ImageView>
                  <Label prefHeight="70.0" prefWidth="570.0" text="Vous pouvez prendre des photos directement dans l'application et les comparer!" textAlignment="CENTER" wrapText="true">
                     <font>
                        <Font name="GothamPro-Light" size="18.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <VBox fx:id="slide3" alignment="CENTER" opacity="0.0" spacing="20.0" translateX="100.0">
               <children>
                  <ImageView fitHeight="291.0" fitWidth="459.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
                     <image>
                        <Image url="@assets/3.png" />
                     </image>
                  </ImageView>
                  <Label alignment="CENTER" prefHeight="70.0" prefWidth="570.0" text="Comme vous pouvez choisir vos photos préférés" textAlignment="CENTER" wrapText="true">
                     <font>
                        <Font name="GothamPro-Light" size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                  </Label>
                  <Button fx:id="start" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" pickOnBounds="false" prefHeight="40.0" prefWidth="121.0" style="-fx-background-color: #FF0049; -fx-background-radius: 0;" text="Start" textFill="WHITE" textOverrun="CLIP">
                     <font>
                        <Font name="GothamPro-Medium" size="14.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
      </StackPane>
      <HBox alignment="CENTER" prefHeight="28.0" prefWidth="900.0" spacing="12.0">
         <children>
            <Rectangle fx:id="firstButton" arcHeight="10.0" arcWidth="10.0" fill="#707070" height="10.0" stroke="TRANSPARENT" strokeType="INSIDE" width="25.0" />
            <Rectangle fx:id="secondButton" arcHeight="10.0" arcWidth="10.0" fill="#b5b5b5" height="10.0" stroke="TRANSPARENT" strokeType="INSIDE" width="15.0" />
            <Rectangle fx:id="thirdButton" arcHeight="10.0" arcWidth="10.0" fill="#b5b5b5" height="10.0" stroke="TRANSPARENT" strokeType="INSIDE" width="15.0" />
         </children>
      </HBox>
   </children>
</VBox>
